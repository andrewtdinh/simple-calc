doctype html
html
  head
    meta(charset='utf-8')      
    title SimpleCalc
    link(rel='stylesheet', href='/vendor/font-awesome/css/font-awesome.min.css')
    link(rel='stylesheet', href=isProd ? '/index.min.css' : '/index.css')
    link(rel='shortcut icon', href='/favicon.ico')
  body
    h1 SimpleCalc
    #calculator
      #display 0
      #keyrow-1
        button.number 7
        button.number 8
        button.number 9
        button.operator +
      #keyrow-2
        button.number 4
        button.number 5
        button.number 6
        button.operator -
      #keyrow-3
        button.number 1
        button.number 2
        button.number 3
        button.operator *
      #keyrow-4
        button.number 0
        button#decimal .
        button#equal =
        button.operator :
        
          

    script(src='/vendor/jquery/dist/jquery.min.js')
    script(src=isProd ? '/index.min.js' : '/index.js')
